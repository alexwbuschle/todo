<%= render partial: 'shared/flash' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Completed</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.done %></td>
        <td>
          <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_task_path(task) %> |
          <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Task', new_task_path %>