<%= render partial: 'shared/flash' %>

<%= form_for(@task, html: { class: 'form-horizontal' }) do |f| %>
  <%= render partial: 'shared/errors', locals: { object: @task } %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-xs-2' %>
    <div class="col-xs-10"><%= f.text_field :name, class: 'form-control' %></div>
  </div>

  <div class="form-group">
    <%= f.label :done, class: 'control-label col-xs-2' %>
    <div class="col-xs-10"><%= f.check_box :done, class: 'form-control' %></div>
  </div>

  <div class="actions">
  <%= f.submit(nil, class: 'btn btn-primary') %>
  </div>
<% end %>